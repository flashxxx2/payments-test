<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="analitics">

    <unique>
        <rest method="GET"
              filters-separator="&amp;">/analitics</rest>
    </unique>

    <fields>
        <field id="id" domain="long">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>

        <field id="balance" domain="long">
            <select/>
        </field>

        <field id="plannedConsumption" domain="long">
            <select/>
        </field>

        <field id="factConsumption" domain="long">
            <select/>
        </field>

        <field id="expensivePurchase" domain="long">
            <select/>
        </field>

        <field id="consumptionCategory" domain="string">
            <select/>
        </field>
    </fields>

</query>
