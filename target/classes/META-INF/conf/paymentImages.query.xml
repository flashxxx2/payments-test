<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="payment">
    <list>
        <rest method="GET" filters-separator="&amp;">/media/{id}/images</rest>
    </list>

    <fields>
        <field id="id">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>
        <field id="fileName">
            <select/>
        </field>
        <field id="url">
            <select/>
        </field>
    </fields>
</query>
